<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/kolr_dialog_box"
    android:background="@drawable/dialog_light"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin">

    <TextView
        android:id="@+id/tv_update_header"
        style="@style/kolr_shadowed_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=" "
        android:textSize="@dimen/text_size_big"
        android:padding="@dimen/padding_16dp"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/padding_16dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_update_detail"
                style="@style/kolr_shadowed_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/orange_5"
                android:text=" "
                android:textSize="@dimen/text_size"
                android:autoLink="all"/>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_update_action"
        style="@style/kolr_shadowed_text"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/btn_img_size"
        android:layout_gravity="center"
        android:layout_margin="@dimen/padding_4dp"
        android:background="@drawable/btn_red"
        android:padding="@dimen/padding_8dp"
        android:text=" "
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_update_go_back"
        style="@style/kolr_shadowed_text"
        android:layout_width="@dimen/btn_img_size"
        android:layout_height="@dimen/btn_img_size"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/padding_8dp"
        android:background="@drawable/btn_go_back" />
</LinearLayout>