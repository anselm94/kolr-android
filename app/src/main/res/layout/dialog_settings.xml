<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/kolr_dialog_box"
    android:background="@drawable/dialog_light"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/banner_height"
        android:gravity="center"
        android:src="@drawable/img_settings" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/settings_color_panel_height"
                android:background="@drawable/dialog_dark"
                android:orientation="vertical"
                android:padding="@dimen/padding_4dp">

                <TextView
                    android:id="@+id/tv_color"
                    style="@style/kolr_shadowed_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/txt_color"
                    android:padding="@dimen/padding_8dp"/>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/btn_img_size"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/padding_4dp">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1" />

                    <Button
                        android:id="@+id/btn_red"
                        android:layout_width="@dimen/btn_color_select_size"
                        android:layout_height="@dimen/btn_color_select_size"
                        android:background="@drawable/btn_red" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1" />

                    <Button
                        android:id="@+id/btn_green"
                        android:layout_width="@dimen/btn_color_select_size"
                        android:layout_height="@dimen/btn_color_select_size"
                        android:background="@drawable/btn_green" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1" />

                    <Button
                        android:id="@+id/btn_blue"
                        android:layout_width="@dimen/btn_color_select_size"
                        android:layout_height="@dimen/btn_color_select_size"
                        android:background="@drawable/btn_blue" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1" />

                    <Button
                        android:id="@+id/btn_yellow"
                        android:layout_width="@dimen/btn_color_select_size"
                        android:layout_height="@dimen/btn_color_select_size"
                        android:background="@drawable/btn_yellow" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/btn_img_size"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1" />

                    <Button
                        android:id="@+id/btn_orange"
                        android:layout_width="@dimen/btn_color_select_size"
                        android:layout_height="@dimen/btn_color_select_size"
                        android:background="@drawable/btn_orange" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1" />

                    <Button
                        android:id="@+id/btn_violet"
                        android:layout_width="@dimen/btn_color_select_size"
                        android:layout_height="@dimen/btn_color_select_size"
                        android:background="@drawable/btn_violet" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1" />

                    <Button
                        android:id="@+id/btn_black"
                        android:layout_width="@dimen/btn_color_select_size"
                        android:layout_height="@dimen/btn_color_select_size"
                        android:background="@drawable/btn_black" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_settings_rate"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/btn_img_size"
        android:text="@string/txt_rate"
        android:background="@drawable/btn_red"
        style="@style/kolr_shadowed_text"
        android:layout_margin="@dimen/padding_8dp"
        android:padding="@dimen/padding_4dp"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/btn_settings_go_back"
        android:layout_width="@dimen/btn_img_size"
        android:layout_height="@dimen/btn_img_size"
        android:layout_gravity="center"
        android:background="@drawable/btn_go_back" />
</LinearLayout>